function! InsertPaste(before)
    let pos=getpos(".")
    let win=winsaveview()
    if getline(".") =~ '^$' || a:before
        normal! P
    else
        normal! p
        let pos[2]+=1
    endif
    "call winrestview(win)
    "call setpos(".",pos)
    startinsert
endfunction

