function! BufJumpDelete()
    exe "jd ^=expand('%:p')<CR>$"
    bdelete
endfunction

function! AckTop(pattern)
    set hls
    let path = system('git rev-parse --show-toplevel')
    exe 'silent! Ack! "' . a:pattern . '" ' . path
endfunction
command! -nargs=+ AckTop call AckTop(<q-args>)

