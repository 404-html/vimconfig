function! MyCoolFunction(anArg)
python << endpython
import vim
anArg = vim.eval("a:anArg")
# do important stuff
vim.command("return 1") # return from the Vim function!
endpython
endfunction

" make functions to run 'normal' commands in paste mode (or even
" better, with an option enabled)
fun! OpenLineUp()
    set paste
    normal! O
    set nopaste
endf
fun! OpenLineDown()
    set paste
    normal! o
    set nopaste
endf

