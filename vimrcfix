function! MovePercent(signedpercent)
    let step = abs(a:signedpercent) * winheight(0) / 100
    if a:signedpercent < 0
        for i in range(1,step)
            normal! 
        endfor
    elseif a:signedpercent > 0
        for i in range(1,step)
            normal! 
        endfor
    endif
endfunction

